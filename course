    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');
            const contentSections = document.querySelectorAll('.content-section');
            const mainContent = document.getElementById('main-content');

            navLinks.forEach(link => {
                link.addEventListener('click', function (event) {
                    event.preventDefault();
                    const targetId = this.dataset.target;

                    navLinks.forEach(nav => nav.classList.remove('active'));
                    this.classList.add('active');

                    contentSections.forEach(section => {
                        if (section.id === targetId) {
                            section.classList.add('active');
                        } else {
                            section.classList.remove('active');
                        }
                    });
                    mainContent.scrollTop = 0; // Scroll to top of content area
                });
            });

            // Chart.js data and configuration
            const ctx = document.getElementById('courseHoursChart').getContext('2d');
            const courseHoursChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [
                        '1. Введение (3ч)', 
                        '2. Интерфейс (0.5ч)', 
                        '3. Ввод данных (2.5ч)', 
                        '4. Функции (5ч)', 
                        '5. Диаграммы (4ч)', 
                        '6. Сводные таблицы (6ч)', 
                        '7. Онлайн-таблицы (8ч)', 
                        '8. Итоговый проект (4ч)'
                    ],
                    datasets: [{
                        label: 'Часы на модуль',
                        data: [3, 0.5, 2.5, 5, 4, 6, 8, 4],
                        backgroundColor: [
                            '#0d9488', // teal-600
                            '#0f766e', // teal-700
                            '#115e59', // teal-800
                            '#134e4a', // teal-900
                            '#0d9488',
                            '#0f766e',
                            '#115e59',
                            '#134e4a'
                        ],
                        borderColor: [
                            '#042f2e', 
                            '#042f2e',
                            '#042f2e',
                            '#042f2e',
                            '#042f2e',
                            '#042f2e',
                            '#042f2e',
                            '#042f2e'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Количество часов'
                            }
                        },
                        x: {
                            ticks: {
                                callback: function(value, index, values) {
                                    // Wrap long labels
                                    const label = this.getLabelForValue(value);
                                    if (label.length > 15) {
                                        return label.match(/.{1,15}/g); // Split into lines of 15 chars
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false // Hiding legend as it's a single dataset
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y + ' ч.';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Gemini API Integration
            const API_KEY = ""; // If you want to use models other than gemini-2.0-flash or imagen-3.0-generate-002, provide an API key here. Otherwise, leave this as-is.

            async function callGeminiAPI(prompt, outputElementId, loadingElementId) {
                const outputElement = document.getElementById(outputElementId);
                const loadingElement = document.createElement('div');
                loadingElement.className = 'loading-spinner';
                
                outputElement.innerHTML = ''; // Clear previous output
                outputElement.appendChild(loadingElement); // Show loading spinner

                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                const payload = { contents: chatHistory };
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${API_KEY}`;

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    const result = await response.json();

                    if (result.candidates && result.candidates.length > 0 &&
                        result.candidates[0].content && result.candidates[0].content.parts &&
                        result.candidates[0].content.parts.length > 0) {
                        const text = result.candidates[0].content.parts[0].text;
                        outputElement.innerHTML = text;
                    } else {
                        outputElement.innerHTML = 'Ошибка: Не удалось получить ответ от ИИ. Попробуйте еще раз.';
                        console.error('Unexpected API response structure:', result);
                    }
                } catch (error) {
                    outputElement.innerHTML = 'Ошибка: Произошла ошибка при вызове API. Пожалуйста, проверьте подключение к сети или попробуйте позже.';
                    console.error('Error calling Gemini API:', error);
                } finally {
                    if (outputElement.contains(loadingElement)) {
                        outputElement.removeChild(loadingElement); // Hide loading spinner
                    }
                }
            }

            // Function to get module content, excluding LLM feature containers
            function getModuleContent(moduleId) {
                const moduleSection = document.getElementById(moduleId);
                if (!moduleSection) return '';
                
                let content = '';
                // Clone the section to remove LLM feature containers before extracting text
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = moduleSection.innerHTML;
                tempDiv.querySelectorAll('.llm-feature-container').forEach(el => el.remove());
                
                content = tempDiv.innerText;
                return content;
            }

            // Attach event listeners for LLM features
            for (let i = 1; i <= 8; i++) {
                const moduleId = `module${i}-content`;
                const generateSummaryBtn = document.getElementById(`generate-summary-btn-${moduleId.split('-')[0]}`);
                const summaryOutput = document.getElementById(`${moduleId.split('-')[0]}-summary-output`);
                const askExpertBtn = document.getElementById(`ask-expert-btn-${moduleId.split('-')[0]}`);
                const expertInput = document.getElementById(`${moduleId.split('-')[0]}-expert-input`);
                const expertOutput = document.getElementById(`${moduleId.split('-')[0]}-expert-output`);

                if (generateSummaryBtn) {
                    generateSummaryBtn.addEventListener('click', async () => {
                        const moduleContent = getModuleContent(moduleId);
                        const prompt = `Суммируйте следующее содержание образовательного модуля для учителей, сосредоточившись на ключевых концепциях и практическом применении:\n\n${moduleContent}`;
                        await callGeminiAPI(prompt, summaryOutput.id);
                    });
                }

                if (askExpertBtn) {
                    askExpertBtn.addEventListener('click', async () => {
                        const userQuestion = expertInput.value.trim();
                        if (!userQuestion) {
                            expertOutput.innerHTML = 'Пожалуйста, введите ваш вопрос.';
                            return;
                        }
                        const moduleContent = getModuleContent(moduleId);
                        const prompt = `На основе следующего содержания образовательного модуля, ответьте на вопрос. Если информация отсутствует в модуле, укажите это.\n\nСодержание модуля:\n${moduleContent}\n\nВопрос: ${userQuestion}`;
                        await callGeminiAPI(prompt, expertOutput.id);
                    });
                }
            }
        });
    </script>
</body>
</html>
